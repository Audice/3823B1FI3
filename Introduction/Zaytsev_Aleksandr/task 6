#include <stdio.h>      //пример водных данных из инета
                        // x1,y1 = (2, -3)  x2,y2 = (1,1)  x3,y3 = (-6,5)  ответ должен быть 12
#include <locale.h>
#include <math.h>
int main()
{
    
    setlocale(LC_ALL, "Rus");

    float x1, y1, x2, y2, x3, y3, X1, X2, X3, S, p, P, x21, y21, x32, y32, x13, y13; // большие иксы это типа стороны, длина векторов  
    printf("Введите координаты первой точки\n");
    scanf("%f %f", &x1, &y1); 
    printf("Введите координаты второй точки\n");
    scanf("%f %f", &x2, &y2); 
    printf("Введите координаты третьей точки\n");
    scanf("%f %f", &x3, &y3); 
    
    x21 = x2 - x1;
    y21 = y2 - y1;
    X1 = sqrt((x21*x21) + (y21*y21)); // первая сторона
    
    x32 = x3 - x2;
    y32 = y3 - y2;
    X2 = sqrt((x32*x32) + (y32*y32)); // вторая сторона
    
    x13 = x1 - x3;
    y13 = y1 - y3;
    X3 = sqrt((x13*x13) + (y13*y13)); // третья сторона
    
    P = X1 + X2 + X3; //периметр
    printf("Периметр равен %.2f\n", P);
    p = P / 2; // полупериметр
    S = sqrt(p*(p-X1)*(p-X2)*(p-X3)); //формула Герона
    
    printf("Площадь треугольника %.2f", S);             
}
